definition
	EVALUATION[at0000] matches {	-- HADS utvärdering
		data matches {
			ITEM_TREE[at0001] matches {	-- *Tree(en)
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0002] occurrences matches {0..1} matches {	-- Utvärdering av depression
						value matches {
							0|[local::at0004], 	-- Depression är ej sannolikt
							1|[local::at0005], 	-- Potentiell förekomst av depression
							2|[local::at0006]  	-- Depression föreligger sannolikt
						}
					}
					ELEMENT[at0003] occurrences matches {0..1} matches {	-- Utvärdering av ångest
						value matches {
							0|[local::at0007], 	-- Ångest är ej sannolikt
							1|[local::at0008], 	-- Potentiell förekomst av ångest
							2|[local::at0009]  	-- Ångest föreligger sannolikt
						}
					}
				}
			}
		}
	}

