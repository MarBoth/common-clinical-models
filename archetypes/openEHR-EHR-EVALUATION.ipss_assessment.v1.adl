definition
	EVALUATION[at0000] matches {	-- IPSS Utvärdering
		data matches {
			ITEM_TREE[at0001] matches {	-- *Tree(en)
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0002] occurrences matches {0..1} matches {	-- IPSS
						value matches {
							0|[local::at0003], 	-- Lindriga besvär
							1|[local::at0004], 	-- Måttliga besvär
							2|[local::at0005]; 	-- Svåra besvär
							0  	-- assumed value
						}
					}
					ELEMENT[at0006] occurrences matches {0..1} matches {	-- Livskvalitet till följd av nuvarande vattenkastningsbesvär
						value matches {
							0|[local::at0007], 	-- Mycket nöjd
							1|[local::at0008], 	-- Nöjd
							2|[local::at0009], 	-- Ganska nöjd
							3|[local::at0010], 	-- Blandade känslor
							4|[local::at0011], 	-- Ganska missbelåten
							5|[local::at0012], 	-- Olycklig
							6|[local::at0013]; 	-- Fruktansvärt
							0  	-- assumed value
						}
					}
					ELEMENT[at0014] occurrences matches {0..1} matches {	-- Kommentar
						value matches {
							DV_TEXT matches {*}
						}
					}
				}
			}
		}
	}

