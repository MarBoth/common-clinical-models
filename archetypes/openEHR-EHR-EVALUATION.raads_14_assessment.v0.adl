	details = <
		["en"] = <
			language = <[ISO_639-1::en]>
			purpose = <"To evaluate the RAADS-14 screen score for identifying Autism Spectrum Disorder (ASD) in adult psychiatric patients.">
			use = <"To be used in adult psychiatric outpatients. The RAADS-14 screen tool consists of 14 questions each scored 0, 1, 2 or 3 and the total score ranges from a minimum of 0 to a maximum of 42. Three main subdomains are included: Mentalizing deficits, Social anxiety and Sensory reactivity. 
The total score is assessed as: ≥31 = autism very likely; 14 – 30 = autism likely; 0 – 13 No autism symptoms (autism unlikely).">
			keywords = <"ASD", "autism spectrum disorder", "autistic disorder", "Asperger syndrome">
			misuse = <"This is not a diagnostic tool but only intended for screening purposes.">
			copyright = <"© Cambio Healthcare Systems">
		>
		["sv"] = <
			language = <[ISO_639-1::sv]>
			purpose = <"Utvädering för att identifiera autismspektrumtillstånd (AST) hos vuxna.">
			use = <"Använd som screening för att identifiera autismspektrumtillstånd (AST) hos vuxna. RAADS-14 är en förkortad version av urpsrungliga formuläret Ritvo Autism and Asperger Diagnostic Scale-Revised (RAADS-R). Skalan varierar mellan 0p (min) och 42p (max). RAADS-14 består av tre kategorier: 
- Mentaliseringssvårigheter
- Social ångest 
- Sensorisk reaktivitet 

Resultatet tolkas enligt:
0-13p - Autismspektrumtillstånd osannolikt
14-30p - Möjligt autismspektrumtillstånd
 >31p - Sannolikt autismspektrumtillstånd">
			keywords = <"RAADS-14", "autism", "ASD", "Asperger syndrom">
			misuse = <"Använd endast för screening av autismspektrumtillstånd hos vuxna, och ej för att registrera data för ursprungliga formuläret RAADS-R">
			copyright = <"© Cambio Healthcare Systems">
		>
	>
