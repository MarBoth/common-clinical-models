				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0002] occurrences matches {0..1} matches {	-- MEWS utvärdering
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0003, 	-- Mindre risk av att försämras eller dö
									at0004]	-- Storre risk av att försämras eller dö
								}
							}
						}
					}
					ELEMENT[at0005] occurrences matches {0..1} matches {	-- Rekommendation
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0010, 	-- Fortsätta med kontroll som vanligt
									at0009, 	-- Betänk att gör kontroll mer ofta och rapportera situationen till huvudsjuksköterska
									at0007]	-- Betänk att överföra till intensivvårdsavdelning (IVA) och rapportera situationen till intensivvårdsgrupp
								}
							}
						}
					}
					ELEMENT[at0008] occurrences matches {0..1} matches {	-- Kommentar
						value matches {
							DV_TEXT matches {*}
						}
					}
				}
			}
		}
	}

