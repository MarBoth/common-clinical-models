definition
	OBSERVATION[at0000] matches {	-- IPSS frågeformulär
		data matches {
			HISTORY[at0001] matches {	-- *Event Series(en)
				events cardinality matches {1..*; unordered} matches {
					EVENT[at0002] occurrences matches {0..1} matches {	-- *Any event(en)
						data matches {
							ITEM_TREE[at0003] matches {	-- *Tree(en)
								items cardinality matches {0..*; unordered} matches {
									ELEMENT[at0004] occurrences matches {0..1} matches {	-- Hur ofta har du haft en känsla av att blåsan inte tömts helt och hållet vid vattenkastning?
										value matches {
											0|[local::at0012], 	-- Inte alls
											1|[local::at0013], 	-- Mindre än 1 gång av 5
											2|[local::at0014], 	-- Mindre än hälften av gångerna
											3|[local::at0015], 	-- Hälften av gångerna
											4|[local::at0016], 	-- Mer än hälften av gångerna
											5|[local::at0017]; 	-- Nästan alltid
											0  	-- assumed value
										}
									}
									ELEMENT[at0005] occurrences matches {0..1} matches {	-- Hur ofta har du varit tvungen att kasta vatten mindre än två timmar efter senaste tömning?
										value matches {
											0|[local::at0012], 	-- Inte alls
											1|[local::at0013], 	-- Mindre än 1 gång av 5
											2|[local::at0014], 	-- Mindre än hälften av gångerna
											3|[local::at0015], 	-- Hälften av gångerna
											4|[local::at0016], 	-- Mer än hälften av gångerna
											5|[local::at0017]; 	-- Nästan alltid
											0  	-- assumed value
										}
									}
									ELEMENT[at0006] occurrences matches {0..1} matches {	-- Hur ofta har du haft ett avbrott i urinflödet, dvs urinflödet satte igång, stannade upp och satte igång igen?
										value matches {
											0|[local::at0012], 	-- Inte alls
											1|[local::at0013], 	-- Mindre än 1 gång av 5
											2|[local::at0014], 	-- Mindre än hälften av gångerna
											3|[local::at0015], 	-- Hälften av gångerna
											4|[local::at0016], 	-- Mer än hälften av gångerna
											5|[local::at0017]; 	-- Nästan alltid
											0  	-- assumed value
										}
									}
									ELEMENT[at0007] occurrences matches {0..1} matches {	-- Hur ofta har du haft svårt att vänta med att kasta vatten efter att du känt behov att tömma blåsan?
										value matches {
											0|[local::at0012], 	-- Inte alls
											1|[local::at0013], 	-- Mindre än 1 gång av 5
											2|[local::at0014], 	-- Mindre än hälften av gångerna
											3|[local::at0015], 	-- Hälften av gångerna
											4|[local::at0016], 	-- Mer än hälften av gångerna
											5|[local::at0017]; 	-- Nästan alltid
											0  	-- assumed value
										}
									}
									ELEMENT[at0008] occurrences matches {0..1} matches {	-- Hur ofta har du upplevt att strålen varit svag?
										value matches {
											0|[local::at0012], 	-- Inte alls
											1|[local::at0013], 	-- Mindre än 1 gång av 5
											2|[local::at0014], 	-- Mindre än hälften av gångerna
											3|[local::at0015], 	-- Hälften av gångerna
											4|[local::at0016], 	-- Mer än hälften av gångerna
											5|[local::at0017]; 	-- Nästan alltid
											0  	-- assumed value
										}
									}
									ELEMENT[at0009] occurrences matches {0..1} matches {	-- Hur ofta har du haft behov av att krysta eller ta i för att komma igång med vattenkastningen?
										value matches {
											0|[local::at0012], 	-- Inte alls
											1|[local::at0013], 	-- Mindre än 1 gång av 5
											2|[local::at0014], 	-- Mindre än hälften av gångerna
											3|[local::at0015], 	-- Hälften av gångerna
											4|[local::at0016], 	-- Mer än hälften av gångerna
											5|[local::at0017]; 	-- Nästan alltid
											0  	-- assumed value
										}
									}
									ELEMENT[at0010] occurrences matches {0..1} matches {	-- Hur ofta har du vanligtvis behövt gå upp för att kasta vatten från att du lägger dig på kvällen tills du stiger upp på morgonen?
										value matches {
											0|[local::at0042], 	-- Aldrig
											1|[local::at0043], 	-- En gång per natt
											2|[local::at0044], 	-- Två gånger per natt
											3|[local::at0045], 	-- Tre gånger per natt
											4|[local::at0046], 	-- Fyra gånger per natt
											5|[local::at0047]; 	-- Fem eller fler gånger per natt
											0  	-- assumed value
										}
									}
									ELEMENT[at0011] occurrences matches {0..1} matches {	-- Om dina nuvarande vattenkastningsbesvär skulle vara oförändrade under resten av ditt liv, hur skulle du uppleva det?
										value matches {
											0|[local::at0055], 	-- Mycket nöjd
											1|[local::at0056], 	-- Nöjd
											2|[local::at0057], 	-- Ganska nöjd
											3|[local::at0058], 	-- Blandade känslor
											4|[local::at0059], 	-- Ganska missbelåten
											5|[local::at0060], 	-- Olycklig
											6|[local::at0061]; 	-- Fruktansvärt
											0  	-- assumed value
										}
									}
									ELEMENT[at0048] occurrences matches {0..1} matches {	-- Total poäng
										value matches {
											DV_COUNT matches {
												magnitude matches {|0..35|}
											}
										}
									}
									ELEMENT[at0063] occurrences matches {0..1} matches {	-- Kommentar
										value matches {
											DV_TEXT matches {*}
										}
									}
								}
							}
						}
						state matches {
							ITEM_TREE[at0062] matches {*}
						}
					}
				}
			}
		}
	}

