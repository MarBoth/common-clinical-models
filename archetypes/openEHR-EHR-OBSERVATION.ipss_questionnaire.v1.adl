				>
				["at0004"] = <
					text = <"Over the past month, how often have you had the sensation of not completely emptying your bladder after you finished urinating?">
					description = <"Sensation of incomplete emptying.">
				>
				["at0005"] = <
					text = <"Over the past month, how often have you had to urinate less than two hours after you finished urinating?">
					description = <"Frequency of urination.">
				>
				["at0006"] = <
					text = <"Over the past month, how often have you found you stopped and started again several times when urinating?">
					description = <"Intermittency of urination.">
				>
				["at0007"] = <
					text = <"Over the past month, how often have you found it difficult to postpone urination?">
					description = <"Feeling of urgency.">
				>
				["at0008"] = <
					text = <"Over the past month, how often have you had a weak urinary stream?">
					description = <"Weak stream of urine.">
				>
				["at0009"] = <
					text = <"Over the past month, how often have you had to strain to start urination?">
					description = <"Need to strain in order to start urination.">
				>
				["at0010"] = <
					text = <"Over the past month, how many times did you typically get up at night to urinate?">
					description = <"Frequency of nocturia.">
				>
				["at0011"] = <
					text = <"If you were to spend the rest of your life with your urinary condition just the way it is now, how would you feel about that?">
					description = <"Perceived quality of life; not included in total score.">
				>
