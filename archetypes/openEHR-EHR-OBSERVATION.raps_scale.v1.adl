				["at0036"] = <
					text = <"No feeling">
					description = <"Unresponsive (does not moan, flinch, or grasp) to painful stimuli, due to diminished level of consciousness or sedation OR limited ability to feel pain over most of body">
				>
				["at0037"] = <
					text = <"Impaired">
					description = <"Responds only to painful stimuli. Cannot communicate discomfort except by moaning or restlessness OR has a sensory impairment which limits the ability to feel pain or discomfort over ½ of body">
				>
				["at0038"] = <
					text = <"Slightly impaired">
