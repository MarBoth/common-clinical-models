											3|[local::at0047], 	-- Subfebril
											4|[local::at0048]  	-- Afebril
										}
									}
									ELEMENT[at0049] occurrences matches {0..1} matches {	-- S-albumin
										value matches {
											0|[local::at0055], 	-- N/A
											1|[local::at0050], 	-- >25 g/l
