	ontology = (GUIDE_ONTOLOGY) <
		term_definitions = <
			["en"] = (TERM_DEFINITION) <
				terms = <
					["gt0001"] = (TERM) <
						text = <"Hospital Anxiety and Depression Scale (HADS) assessment">
						description = <"Hospital Anxiety and Depression Scale (HADS) was originally developed by Zigmond and Snaith (1983) as a self-assessment scale to detect states of depression and anxiety in the hospital medical outpatient clinic, as well as the severity of these mood disorders. It consists of 14 questions, with 7 related to anxiety (HADS-A subscale) and 7 related to depression (HADS-D subscale). Both subscales are scored separately and each response to every question is scored either 0 (best case), 1, 2, or 3 (worst case). The total score for each subscale ranges from 0 to 21 and for Anxiety (HADS-A): 0-7 points = no anxiety, 8-10 = possible anxiety, ≥11 = definite anxiety, while for Depression (HADS-D):  0-7 points = no depression, 8-10 = possible depression, ≥11 = definite depression. Another HADS categorization has 0-7 = non-case, 8-10 = mild, 11-14 = moderate, 15-21 = severe, for both anxiety and depression subscales.">
					>
					["gt0009"] = (TERM) <
						text = <"Depression assessment">
						description = <"From the total score of 21 derived from the  HADS scale calculation, each category of depression is indicated.">
					>
					["gt0010"] = (TERM) <
						text = <"Anxiety assessment">
						description = <"From the total score of 21 derived from the  HADS scale calculation, each category of anxiety is indicated.">
					>
					["gt0011"] = (TERM) <
						text = <"Set no depression">
					>
					["gt0012"] = (TERM) <
						text = <"Set no anxiety">
					>
					["gt0013"] = (TERM) <
						text = <"Set possible depression">
					>
					["gt0015"] = (TERM) <
						text = <"Depression total score">
						description = <"*">
					>
					["gt0016"] = (TERM) <
						text = <"Anxiety total score">
						description = <"*">
					>
					["gt0017"] = (TERM) <
						text = <"Set definite depression">
					>
					["gt0018"] = (TERM) <
						text = <"Set possible anxiety">
					>
					["gt0019"] = (TERM) <
						text = <"Set definite anxiety">
					>
				>
			>
			["sv"] = (TERM_DEFINITION) <
				terms = <
					["gt0001"] = (TERM) <
						text = <"Hospital Anxiety and Depression Scale (HADS) utvärdering">
						description = <"Hospital Anxiety and Depression Scale utgörs av ett självskattningsformulär om totalt 14 frågor, och används i klinik som screening för upptäckt och värdering av ångest och/eller depression hos patienter i somatisk vård. Tillstånden har sju frågor vardera vilka genererar ett maximum om 21 poäng. Potentiell förekomst av ångest/depression föreligger vid 8-10 poäng, medan ≥11 poäng indikerar att ångest/depression sannolikt föreligger. Skalan är avsedd att användas som screening och är ej att betrakta som diagnostisk.">
					>
					["gt0009"] = (TERM) <
						text = <"Utvärdering av depression">
						description = <"*(en) From the total score of 21 derived from the  HADS scale calculation, each category of depression is indicated.">
					>
