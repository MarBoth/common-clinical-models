			["en"] = (TERM_DEFINITION) <
				terms = <
					["gt0001"] = (TERM) <
						text = <"Risk Assessment Pressure Sore (RAPS) Scale">
						description = <"Risk Assessment Pressure Sore (RAPS) is a tool for assessing a patient's risk of developing a pressure sore. It has been shown to have particularly high predictive validity in the setting of medical and infectious disease wards. This version consists of 10 ordinal variables each contributing a maximum possible 3 or 4 points to the total score (39 points). A total score of 31 or less indicates an individual at high risk of developing a pressure sore. Individual assessment should as a rule be applied as predisposed patients might be high risk despite a score above 31. Use with caution in surgical and orthopaedic setting.">
					>
					["gt0010"] = (TERM) <
						text = <"General condition">
						description = <"The patient's current general condition">
					>
					["gt0011"] = (TERM) <
						text = <"Physical activity">
						description = <"The patient's current general condition">
					>
