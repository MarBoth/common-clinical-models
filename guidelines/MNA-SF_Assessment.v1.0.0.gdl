	ontology = (GUIDE_ONTOLOGY) <
		term_definitions = <
			["en"] = (TERM_DEFINITION) <
				terms = <
					["gt0001"] = (TERM) <
						text = <"Mini Nutritional Assessment - Short Form (MNA-SF)">
						description = <"The Short-Form Mini Nutritional Assessment (MNA-SF) is a risk assessment tool for malnutrition derived from the lengthier MNA. The tool is validated to help detect geriatric patients ≥65 years who are malnourished or at risk of developing malnutrition. It consists of 6 items: food intake in the last 3 months (score 0-2), weight loss in the last 3 months (score 0-3), mobility (0-2), psychological stress/acute disease in the last 3 months (0-2), neuropsychological problems (0-2) and body mass index (or calf circumference, 0-3), with higher scores implying better nutritional status. Maximum score possible is 14, and a score of ≥12 points = normal (no need for further assessment), score 8 - 11 = at risk of malnutrition and score <8 = malnourished. A score <12 requires further assessment and possible intervention.">
					>
					["gt0003"] = (TERM) <
						text = <"Total score">
						description = <"*">
					>
					["gt0005"] = (TERM) <
						text = <"MNA-SF assessment">
						description = <"*">
					>
